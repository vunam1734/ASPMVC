@model List<Product>
<div class="row mt-4">
    <div class="col-md-6">
        <h2>
            Sản phẩm
        </h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Tạo mới
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá </th>
            <th>Thực hiện</th>
            <th>Hình Ảnh</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Name</td>
            <td>@x.Price</td>
            <td>
                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-info"><i class="bi bi-pencil-square"></i> Chỉnh sửa</a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</a>
            </td>
            <td>
            <img src ="/@x.ImageUrl"style="width:100px" />
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.PageIndex==1?"disabled":"")">
            <a class="page-link" asp-action="Index" asp-route-page="1">&laquo;</a>
        </li>
        @for (int i = 1; i <= ViewBag.PageSum; i++)
        {
            <li class="page-item @(ViewBag.PageIndex==i?"active":"")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.PageIndex==ViewBag.PageSum?"disabled":"")">
            <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.PageSum">&raquo;</a>
        </li>
    </ul>
</div>
<partial name="_Pagination" />
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_Notification" />
}