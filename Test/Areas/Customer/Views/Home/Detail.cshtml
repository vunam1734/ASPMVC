@model Product

<h2>Product detail</h2>
<hr />
<div class="row">
    <div class="col-md-3">
        @if (Model.ImageUrl != null)
        {
            <img src="/@Model.ImageUrl" style="width: 300px" />
        }
    </div>
    <div class="col-md-9">
        <div class="alert alert-heading">
            <h4>THÔNG TIN CHI TIẾT SẢN PHẨM</h4>
        </div>
        <div class="mt-3">
            <h5>TÊN SẢN PHẨM: @Model.Name</h5>
        </div>
        <div class="mt-3">
            <h5>GIÁ SẢN PHẨM: @Model.Price USD</h5>
        </div>
        <div class="mt-3">
            <a asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-success"><i class="bi bi-cart"></i> Add to cart</a>
        </div>
        <div class="mt-3 alert alert-heading">
            <h4>SẢN PHẨM CÙNG LOẠI</h4>
        </div>

        <div class="row mt-3">
            @foreach (var x in ViewBag.ListProduct)
            {
                <div class="col-md-2">
                    <div class="card" style="width:150px">
                        <div class="card-header">@x.Name</div>
                        <div class="card-body text-center">
                            <a asp-action="Detail" asp-route-id="@x.Id"><img src="/@x.ImageUrl" style="width:100px; height:100px; object-fit:contain" /></a>
                        </div>
                    </div>
                </div>

            }
        </div>

        <div class="mt-3 alert alert-heading">
            <h4>MÔ TẢ SẢN PHẨM</h4>
        </div>
        <p class="mt-3">
            @Html.Raw(Model.Description)
        </p>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

